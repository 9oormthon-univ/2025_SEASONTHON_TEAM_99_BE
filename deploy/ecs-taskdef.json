{
  "family": "cheongjeong-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::259096356427:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::259096356427:role/cheongjeongAppTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE>",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "" },

        { "name": "DB_USERNAME", "value": "" },
        { "name": "DB_URL", "value": "" },

        { "name": "YOUTH_POLICY_URL", "value": "" },

        { "name": "S3_BUCKET", "value": "" },
        { "name": "S3_REGION", "value": "" },
        { "name": "S3_USER_DIR", "value": "" },
        { "name": "S3_POST_DIR", "value": "" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "" },
        { "name": "JWT_SECRET_KEY", "valueFrom": "" },
        { "name": "YOUTH_POLICY_KEY", "valueFrom": "" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "cheongjeong",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}

