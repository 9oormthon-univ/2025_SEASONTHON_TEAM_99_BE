{
  "family": "cheongjeong-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::259096356427:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::259096356427:role/cheongjeongAppTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE>",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DB_URL", "value": "jdbc:mysql://seasonton.ctmm2cyosp8o.ap-northeast-2.rds.amazonaws.com:3306/seasonton" },
        { "name": "MINIO_URL", "value": "https://s3.ap-northeast-2.amazonaws.com" },
        { "name": "YOUTH_POLICY_URL", "value": "https://www.youthcenter.go.kr/go/ythip/getPlcy" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" },
        { "name": "DB_USERNAME", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" },
        { "name": "JWT_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" },
        { "name": "MINIO_ACCESS_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" },
        { "name": "MINIO_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" },
        { "name": "YOUTH_POLICY_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:259096356427:secret:sesaonton/prod-71Vhi7" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "cheongjeong",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
